{
    "python.linting.pylintArgs": [
        "--errors-only,--unsafe-load-any-extension=y"
    ],
    "editor.detectIndentation": false,
    "editor.tabSize":4,
    "editor.insertSpaces": true,
    "files.exclude": {
        "env": true,
        "*.spec":true,
        ".gitattributes":true,
        ".gitmodules":true,
        "LICENSE":true,
        "**/__pycache__":true,
    },
    "python.venvPath": "{workspaceFolder}",
    "python.pythonPath": "env\\Scripts\\python.exe",
    "files.associations": {
        "*.html": "jinja-html"
    },
}